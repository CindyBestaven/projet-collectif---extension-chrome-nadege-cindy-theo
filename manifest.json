{
  "name": "WorkDesk",
  "version": "1.0.0",
  "description": "",
  "manifest_version": 3,
  "author": "",
  "permissions": ["activeTab","storage","alarms","scripting"],
  "background": {
    "service_worker": "./background.js"
  },
  "action": {
    "default_icon": {
      "64": "./images/logo-workdesk.png"
    },
    "default_popup": "./index.html",
    "default_title": "Ada Extension"
  },
  "content_scripts": [
    {
      "js": [
        "./background.js",
        "./content/social-media-blocker.js",
        "./toDo.js"
      ],
      "html": [
        "./index.html",
        "./popup.html"
      ],
      "css": [
        "./style.css"
    ],
      "matches": ["<all_urls>"]
    }
  ]
}
