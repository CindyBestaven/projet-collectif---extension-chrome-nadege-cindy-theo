{
  "name": "WorkDesk",
  "version": "1.0.0",
  "description": "Timer and To Do List for students.",
  "manifest_version": 3,
  "author" : {
    "author 1": "Nadège Hellemans",
    "author 2": "Cindy Bestaven",
    "author 3": "Théo Seuge"
},
  "permissions": ["activeTab","storage","alarms","scripting"],
  "background": {
    "service_worker": "./background.js"
  },
  "action": {
    "default_icon": {
      "64": "./images/logo-workdesk.png"
    },
    "default_popup": "./index.html",
    "default_title": "Ada Extension"
  },
  "content_scripts": [
    {
      "js": [
        "./content/timer.js",
        "./content/toDo.js"
      ],
      "html": [
        "./index.html"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
