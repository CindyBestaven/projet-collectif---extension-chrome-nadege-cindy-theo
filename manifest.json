{
  "name": "WorkDesk",
  "version": "1.0.0",
  "description": "",
  "manifest_version": 3,
  "author": "",
  "permissions": ["activeTab","storage","alarms"],
  "background": {
    "service_worker": "./background.js"
  },
  "action": {
    "default_popup": "./index.html",
    "default_title": "Ada Extension"
  },
  "content_scripts": [
    {
      "js": [
        "./background.js",
        "./content/social-media-blocker.js",
        "./content/post-it.js",
        "./content/popup.js"
      ],
      "html": [
        "./index.html",
        "./createPostIt.html",
        "./popup.html"
      ],
      "css": [
        "./style.css",
        "./content/post-it.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
